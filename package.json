{
  "name": "probs",
  "version": "1.0.0-4",
  "description": "Tiny test library with async and nesting support",
  "main": "lib/probs.js",
  "bin": "lib/cli.js",
  "type": "module",
  "types": "typings/types/typedef.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "test": "node lib/cli test -i **/_tests",
    "test:fork": "node lib/cli test -i **/_tests --runner fork",
    "test-watch": "nodemon --exec npm run test --ignore **/temp/**"
  },
  "author": "jakobrosenberg@gmail.com",
  "license": "MIT",
  "dependencies": {
    "acorn": "^8.5.0",
    "colorette": "^2.0.16",
    "commander": "^8.3.0",
    "expect": "^27.5.0",
    "hookar": "^0.0.3",
    "jest-diff": "^27.4.6",
    "jest-snapshot": "^27.5.0",
    "magic-string": "^0.25.7",
    "picomatch": "^2.3.0",
    "esm-chain-loader": "^0.0.3-2"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "nodemon": "^2.0.15",
    "source-map": "^0.7.3",
    "typescript": "^4.5.2"
  },
  "prettier": {
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "semi": false,
    "useTabs": false,
    "tabWidth": 4,
    "printWidth": 90,
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteAllowShorthand": true,
    "svelteBracketNewLine": false,
    "svelteIndentScriptAndStyle": true
  }
}
