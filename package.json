{
  "name": "probs",
  "version": "0.1.7",
  "description": "Tiny test library with async and nesting support",
  "main": "lib/runner.js",
  "bin": "lib/cli.js",
  "type": "module",
  "types": "types/typedef.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "test": "probs test -i **/_tests",
    "test-watch": "nodemon --exec npm run test"
  },
  "author": "jakobrosenberg@gmail.com",
  "license": "MIT",
  "dependencies": {
    "acorn": "^8.5.0",
    "colorette": "^2.0.16",
    "commander": "^8.3.0",
    "hookar": "^0.0.3",
    "picomatch": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.2"
  },
  "prettier": {
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "semi": false,
    "useTabs": false,
    "tabWidth": 4,
    "printWidth": 90,
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteAllowShorthand": true,
    "svelteBracketNewLine": false,
    "svelteIndentScriptAndStyle": true
  }
}
